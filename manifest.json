{
  "manifest_version": 3,
  "name": "Element Hunter",
  "version": "1.0",
  "description": "Capture web elements for Selenium automation",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Element Hunter"
  },
  "background": {
    "service_worker": "background.js"
  }
}
