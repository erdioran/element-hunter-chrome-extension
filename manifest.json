{
  "manifest_version": 3,
  "name": "Element Hunter Pro",
  "version": "1.0.1",
  "description": "Web sitelerinde tıklanan elementlerin bilgilerini otomatik olarak toplar ve JSON formatında saklar",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Element Hunter"
  },
  "background": {
    "service_worker": "background.js"
  }
}
